{
  "compilerOptions": {
    "lib": [
      "es2022",
      "dom"
    ],
    "target": "es2022",
    "module": "commonjs",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "exactOptionalPropertyTypes": false,
    "allowJs": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "rootDir": "./src",
    "outDir": "./dist"
  },
  "include": ["./src/**/*"]
}